# Night Watch Configuration
# Copy this file to .env and customize for your deployment

# ============================================================================
# Station Location (REQUIRED)
# ============================================================================
# Set to your actual coordinates for accurate satellite predictions
STATION_LATITUDE=51.5069
STATION_LONGITUDE=-0.1276
STATION_ALTITUDE=10

# ============================================================================
# RTL-SDR Settings
# ============================================================================
# Gain: 0-50 (higher = more sensitive but more noise)
# Recommended: 40-50 for weak signals, 30-40 for strong signals, or 'auto'
SDR_GAIN=45
SDR_SAMPLE_RATE=48000
SDR_PPM_CORRECTION=0

# ============================================================================
# Capture Settings
# ============================================================================
MIN_ELEVATION=20
# Signal strength threshold in dB (lower = more sensitive)
# Recommended: -25 to -30 for weak signals, -20 for strong signals
MIN_SIGNAL_STRENGTH=-25

# Data directories
# For Docker: Use /app/recordings, /app/images, /app/data
# For local dev: Use ./recordings, ./images, ./data
RECORDINGS_DIR=./recordings
IMAGES_DIR=./images
DATABASE_PATH=./data/captures.db

# ============================================================================
# TLE & Updates
# ============================================================================
TLE_UPDATE_INTERVAL_HOURS=24

# ============================================================================
# Web Dashboard
# ============================================================================
WEB_PORT=3000
WEB_HOST=0.0.0.0

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# Satellite Options
# ============================================================================
# ISS SSTV - Enable ISS capture by default
ISS_SSTV_ENABLED=true

# 2m Ground SSTV Scanning - Scan 144.5/145.5 MHz during idle time
# When enabled, the system will scan amateur 2m SSTV frequencies when no satellite passes are scheduled
GROUND_SSTV_SCAN_ENABLED=false

# ============================================================================
# Deployment Configuration (optional - for scripts/deploy/deploy.sh)
# ============================================================================
DEPLOY_TARGET=user@192.168.1.xxx
DEPLOY_DIR=noaa-satellite-capture
DEPLOY_PORT=80
