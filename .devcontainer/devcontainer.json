  },
  "mounts": ["source=/dev/bus/usb,target=/dev/bus/usb,type=bind"],
  "runArgs": ["--privileged"],
  "postCreateCommand": "bun install && echo 'üõ∞Ô∏è Dev Container Ready! Run: bun start'",
