{
  "name": "RFCapture",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": ["ms-azuretools.vscode-docker", "eamodio.gitlens", "biomejs.biome"]
    }
  },
  "mounts": [
    "source=/dev/bus/usb,target=/dev/bus/usb,type=bind",
    "source=rfcapture-data,target=/workspace/data,type=volume",
    "source=rfcapture-images,target=/workspace/images,type=volume",
    "source=rfcapture-recordings,target=/workspace/recordings,type=volume",
    "source=${localEnv:HOME}/.config/claude,target=/home/node/.config/claude,type=bind"
  ],
  "runArgs": ["--privileged"],
  "postCreateCommand": "bun install && echo 'RFCapture Dev Container Ready! Run: bun start'",
  "postStartCommand": "bun install"
}
