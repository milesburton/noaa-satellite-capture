# RFCapture Production Configuration
# Copy this file to .env and customize for your deployment

# Receiver Location - Set to your actual coordinates
STATION_LATITUDE=51.5069
STATION_LONGITUDE=-0.1276
STATION_ALTITUDE=10

# RTL-SDR Settings
# Gain: 0-50 (higher = more sensitive but more noise, try 40-50 for weak signals)
SDR_GAIN=49
SDR_SAMPLE_RATE=48000
SDR_PPM_CORRECTION=0

# Recording Settings
MIN_ELEVATION=20
# Signal strength threshold in dB (lower = more sensitive, try -25 to -30 for weak signals)
MIN_SIGNAL_STRENGTH=-25
RECORDINGS_DIR=/app/recordings
IMAGES_DIR=/app/images

# TLE Settings
TLE_UPDATE_INTERVAL_HOURS=24

# Web Dashboard
WEB_PORT=3000
WEB_HOST=0.0.0.0

# Database
DATABASE_PATH=/app/data/captures.db

# Logging
LOG_LEVEL=info

# ISS SSTV - Enable by default
ISS_SSTV_ENABLED=true

# Deployment Configuration (used by deploy scripts)
DEPLOY_TARGET=user@192.168.1.xxx
DEPLOY_DIR=noaa-satellite-capture
DEPLOY_PORT=8002
