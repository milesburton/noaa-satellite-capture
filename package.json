{
  "name": "noaa-satellite-capture",
  "version": "1.0.0",
  "description": "Automatically capture NOAA weather satellite imagery using RTL-SDR",
  "type": "module",
  "main": "src/cli/main.ts",
  "scripts": {
    "start": "bun run src/cli/main.ts run",
    "dev": "bun run --watch src/cli/main.ts run",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "predict": "bun run src/cli/main.ts predict",
    "status": "bun run src/cli/main.ts status",
    "serve": "bun run src/cli/main.ts serve",
    "prepare": "husky"
  },
  "dependencies": {
    "satellite.js": "^5.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/bun": "^1.1.14",
    "husky": "^9.1.7",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
