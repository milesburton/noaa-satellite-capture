{
  "name": "night-watch",
  "version": "2.0.0",
  "description": "Night Watch - Automated satellite signal capture and decoding platform",
  "type": "module",
  "main": "src/backend/cli/main.ts",
  "scripts": {
    "start": "bun run src/backend/cli/main.ts run",
    "dev": "bun run --watch src/backend/cli/main.ts run",
    "dev:ui": "cd src/frontend && bun run dev",
    "build:ui": "cd src/frontend && bun run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "bunx biome check .",
    "lint:fix": "bunx biome check --write .",
    "format": "bunx biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "predict": "bun run src/backend/cli/main.ts predict",
    "status": "bun run src/backend/cli/main.ts status",
    "version:generate": "bun run scripts/generate-version.ts",
    "maintenance:decode": "bun run src/backend/cli/commands/maintenance.ts --decode",
    "maintenance:cleanup": "bun run src/backend/cli/commands/maintenance.ts --cleanup",
    "maintenance:all": "bun run src/backend/cli/commands/maintenance.ts --all",
    "serve": "bun run src/backend/cli/main.ts serve",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "fft.js": "^4.0.4",
    "ora": "^8.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "satellite.js": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/bun": "^1.1.14",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.17",
    "husky": "^9.1.7",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
